<Page x:Class="ЧибисоваTest.View.Pages.AddStudentPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЧибисоваTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="AddStudentPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="61"/>
            <RowDefinition Height="41"/>
            <RowDefinition Height="61"/>
            <RowDefinition Height="41"/>
            <RowDefinition Height="61"/>
            <RowDefinition Height="61"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Text="Введите ФИО:" FontSize="20"
                   VerticalAlignment="Center"/>

        <TextBox Grid.Column="2" Margin="10" Name="NameTb"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Группа:" FontSize="20"
                   VerticalAlignment="Center"/>

        <ComboBox Grid.Row="2" Grid.Column="2" Margin="10" Name="GroupCmb"/>

        <Button Grid.Row="4" Grid.Column="1" Margin="10"
                Content="Добавить" FontSize="20"
                Name="AddBtn"
                Click="AddBtn_Click"/>

        <Button Grid.Row="4" Grid.Column="2" Margin="10"
                Content="Назад" FontSize="20"
                Name="ExitBtn"
                Click="ExitBtn_Click"/>
    </Grid>
</Page>
