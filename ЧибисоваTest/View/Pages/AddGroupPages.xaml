<Page x:Class="ЧибисоваTest.View.Pages.AddGroupPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЧибисоваTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="AddGroupPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="94"/>
            <RowDefinition Height="74"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="74"/>
            <RowDefinition Height="94"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="1" Grid.Column="2" Margin="10" Name="GroupTb"/>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Введите группу:" FontSize="20"
           VerticalAlignment="Center"/>

        <Button Grid.Row="3" Grid.Column="1" Margin="10"
        Content="Добавить" FontSize="20"
        Name="AddBtn"
        Click="AddBtn_Click"/>

        <Button Grid.Row="3" Grid.Column="2" Margin="10"
        Content="Назад" FontSize="20"
        Name="ExitBtn"
        Click="ExitBtn_Click"/>
    </Grid>
</Page>
