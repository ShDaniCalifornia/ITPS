                        <CheckBox Name="CHB2" Margin="10" HorizontalAlignment="Left" Content="долей основных фондов отрасли в общем объеме основных фондов промышленности;"/>
                        <CheckBox Name="CHB3" Margin="10" HorizontalAlignment="Left" Content="долей оборотных фондов в общем объеме оборотных фондов промышленности;"/>
                        <CheckBox Name="CHB4" Margin="10" HorizontalAlignment="Left" Content="долей работников, занятых в отрасли, в общей численности работников промышленности;"/>
                        <CheckBox Name="CHB5" Margin="10" HorizontalAlignment="Left" Content="долей прибыли отрасли в общей прибыли промышленности;"/>

                        <Button Name="P3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="P3_Click" />
                        
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <!-- 4 -->
            <TabItem Name="v4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
