<Page x:Class="SummerCamp.View.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerCamp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="300"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0, 10, 1, 200" Height="200" Width="280">
            <TextBlock Height="50">
                <Hyperlink x:Name="AddGroup" FontSize="25" Click="AddGroup_Click">
                    <Run Text="Добавить группу"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock Height="50">
                <Hyperlink x:Name="AddCompetition" FontSize="25" Click="AddCompetition_Click">
                    <Run Text="Добавить соревнование"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock Height="50">
                <Hyperlink x:Name="Counting" FontSize="25" Click="Counting_Click">
                    <Run Text="Учет"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
