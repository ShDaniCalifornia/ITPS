<Page x:Class="ЧибисоваTest.View.Pages.InterfaceTeacherPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЧибисоваTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="InterfaceTeacherPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" Grid.Row="1"
                Content="Добавить студента" FontSize="20"
                Name="AddStudentBtn"
                Click="AddStudentBtn_Click"/>
        
        <Button Grid.Column="1" Grid.Row="3"
                Content="Добавить группу" FontSize="20"
                Name="AddGroupBtn"
                Click="AddGroupBtn_Click"/>
        
        <Button Grid.Column="1" Grid.Row="5"
                Content="Список студентов с оценками" FontSize="20"
                Name="JournalBtn"
                Click="JournalBtn_Click"/>
        
        <Button Grid.Column="1" Grid.Row="7"
                Content="Удалить студента" FontSize="20"
                Name="DeleteStudentBtn"
                Click="DeleteStudentBtn_Click"/>

        <Button Grid.Column="1" Grid.Row="9"
                Content="Выйти в главное меню" FontSize="20"
                Name="ExitBtn"
                Click="ExitBtn_Click"/>

    </Grid>
</Page>
