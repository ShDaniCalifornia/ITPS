<Page x:Class="SummerCamp.View.Pages.AddCompetitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerCamp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="500"
      Title="AddCompetitionPage">
    
    <Grid Margin="90 10 90 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Введите соревнование:" FontSize="25"/>
        <TextBox Name="CompetitonTb" Grid.Row="2" Margin="10"/>
        <TextBlock Grid.Row="4" Text="Выберите его вид" FontSize="25"/>
        <ComboBox Name="TypeCompetitionCmb" Grid.Row="6" Margin="10"/>
        <Button Name="AddCompetitionBtn" Grid.Row="8" Content="Добавить" FontSize="25" Margin="10" Click="AddCompetitionBtn_Click"/>
    </Grid>
</Page>
