      d:DesignHeight="500" d:DesignWidth="1200"
      Title="PageTest1">

    <Grid>
        <TabControl Name="products">
            <!-- 1 -->
            <TabItem Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Пути формирования отраслей промышленности:" FontSize="30"/>
