<Page x:Class="Control8.View.Pages.MenuPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Control8.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="300"
      Title="MenuPages">

    <Grid Margin="10">
        <Image Source="/Resources/1709764610_bogatyr-club-mekd-p-fon-gradient-oranzhevo-zheltii-30.jpg" Stretch="Fill"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5, 0, 0" Height="650" Width="250">
            
            <TextBlock Height="70">
                <Hyperlink x:Name="HL1" FontSize="25" Click="HL1_Click">
                    <Run Text="Добавить группу"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock Height="70">
                <Hyperlink Name="Hl2" FontSize="25" Click="Hl2_Click">
                    <Run Text="Добавить активность"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock Height="70">
                <Hyperlink Name="HL3" FontSize="25" Click="HL3_Click">
                    <Run Text="Учет"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock Height="70">
                <Hyperlink Name="HL4" FontSize="25" Click="HL4_Click">
                    <Run Text="Отчет 1"/>
                </Hyperlink>
            </TextBlock>

            <TextBlock>
                <Hyperlink Name="HL5" FontSize="25" Click="HL5_Click">
                    <Run Text="Отчет 2"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
