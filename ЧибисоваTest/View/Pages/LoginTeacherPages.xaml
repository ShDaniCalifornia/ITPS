<Page x:Class="ЧибисоваTest.View.Pages.LoginTeacherPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЧибисоваTest.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="LoginTeacherPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="72"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Светлана Дмитриевна, введите пароль"
                   FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <PasswordBox Grid.Column="1" Grid.Row="3" FontSize="20"/>

        <Button Grid.Column="1" Grid.Row="5" Margin="150 10 150 10" Content="OK"
                Name="OKBtn" Click="OKBtn_Click" FontSize="15"/>
    </Grid>
</Page>
